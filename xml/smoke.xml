<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke Suite">
   
    <groups>  
      <run>  
         <include name="Smoke"/>  
      </run>  
   </groups>  

   <listeners>
	<listener class-name="com.facebook.listeners.FacebookListener"></listener>
  </listeners> 

  <test  name="Login Test">
    <classes>
      <class name="com.facebook.loginTests.LoginTest"/>
    </classes>
  </test> 
  
    <test  name="Registration Test">
    <classes>
      <class name="com.facebook.registrationTests.RegistrationTest"/>
                   
    </classes>
  </test> 
  
</suite> 
